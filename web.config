<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Prevent access to sensitive files -->
        <security>
            <requestFiltering>
                <hiddenSegments>
                    <add segment=".env" />
                    <add segment="config.php" />
                    <add segment="db.php" />
                    <add segment="waf.php" />
                    <add segment="auth.php" />
                    <add segment="logs" />
                </hiddenSegments>
            </requestFiltering>
        </security>
        
        <!-- Remove server information -->
        <httpProtocol>
            <customHeaders>
                <remove name="X-Powered-By" />
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-XSS-Protection" value="1; mode=block" />
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
                <add name="Content-Security-Policy" value="default-src 'self'; script-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data:; connect-src 'self'; frame-ancestors 'self';" />
                <add name="Permissions-Policy" value="geolocation=(), microphone=(), camera=()" />
            </customHeaders>
        </httpProtocol>
        
        <!-- Request size limit -->
        <security>
            <requestFiltering>
                <requestLimits maxAllowedContentLength="10485760" />
            </requestFiltering>
        </security>
        
        <!-- Prevent directory browsing -->
        <directoryBrowse enabled="false" />
        
        <!-- URL Rewrite rules -->
        <rewrite>
            <rules>
                <!-- Block access to .env file -->
                <rule name="Block .env" stopProcessing="true">
                    <match url="^\.env$" />
                    <action type="CustomResponse" statusCode="403" statusReason="Forbidden" statusDescription="Access Denied" />
                </rule>
                
                <!-- Block access to sensitive PHP files -->
                <rule name="Block sensitive PHP files" stopProcessing="true">
                    <match url="^(config|db|waf|auth)\.php$" />
                    <action type="CustomResponse" statusCode="403" statusReason="Forbidden" statusDescription="Access Denied" />
                </rule>
                
                <!-- Block access to logs directory -->
                <rule name="Block logs directory" stopProcessing="true">
                    <match url="^logs/" />
                    <action type="CustomResponse" statusCode="403" statusReason="Forbidden" statusDescription="Access Denied" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>

